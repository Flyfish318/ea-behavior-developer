<Window x:Class="ElementEditor.BehaviorEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
	Title="ふるまいエディタ" Height="500" Width="600" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="440*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <avalonEdit:TextEditor x:Name="behaviorEdit"
                               Margin="10"
                               FontFamily="Consolas"
                               FontSize="9pt"
                               SyntaxHighlighting="C#"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="CommitButton" Content="OK" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="75" Click="CommitButton_Click"/>
            <Button x:Name="CancelButton" Content="キャンセル" HorizontalAlignment="Left" Margin="10,4,0,0" Width="75" Click="CancelButton_Click"/>
        </StackPanel>


    </Grid>
</Window>